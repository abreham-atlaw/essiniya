<div class="alert alert-primary" role="alert" >
	<a href="#" class="alert-link" data-toggle="modal" data-target="#{{context.carts_length}}Modal">{{ id }}</a>
</div>
<div class="modal  fade" id="{{context.carts_length}}Modal" tabindex="-1" aria-labelledby="{{context.carts_length}}Label" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="{{context.carts_length}}Label">Order Content</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div>
					<div class="mt-5">
						{{#each orders}}
							<div class="card mb-3 mr-auto ml-auto" style="max-width: 540px;">
								<div class="row no-gutters">
									<div class="col-md-4">
										<img src="{{ this.item.cover_image }}" class="card-img" alt="{{ this.item.name }} cover image">
									  </div>
									<div class="col-md-8">
										<div class="card-body pb-0 pt-1">
											<h5 class="card-title">{{ this.item.name }}</h5>
											<div class="d-flex" style="flex-wrap: wrap;">
												<p class="card-text col-6 p-0">Color: {{ this.color.name }}</p>
												<p class="card-text col-6 p-0">Size: {{ this.size.value }}</p>
												<p class="card-text col-6 p-0">Quantitiy: {{ this.quantity }}</p>
												<p class="cart-text col-6 p-0">Price: {{ this.item.price }}</p>
												<p class="cart-text">Total Price: {{ this.price }}</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						{{/each}}
					</div>
				</div>
				<div>
					<div class="card text-center">
								<div class="card-header">
								  <h2>Summary</h2>
								</div>
								<div class="card-body">
									<p class="cart-text">Number of Items: {{ length }}</p>
									<p class="card-text ">Total Price: {{ price }}</p>
								</div>
							</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<a href="/admin-site/orders/complete/{{ id }}/" role="button" class="btn btn-primary"><i class="fas fa-check mr-1"></i>Complete</a>
			</div>
		</div>
	</div>
</div>

